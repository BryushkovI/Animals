<Window x:Class="Animals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Animals"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="animalList"
                  Margin="5" Grid.Column="0"/>
        <StackPanel Orientation="Horizontal"
                    Margin="5" Grid.Column="1">
            <StackPanel Orientation="Vertical" Width="250">
                <TextBlock x:Name="nameing" Margin="2"/>
                <TextBlock x:Name="nutrition" Margin="2"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Width="250">
                <TextBlock x:Name="legs" Margin="2"/>
                <TextBlock x:Name="avgLength" Margin="2"/>
                <TextBlock x:Name="avgWeigth" Margin="2"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
